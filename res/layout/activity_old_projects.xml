<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/oldproject1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp"
        android:text="Old Project 1" />

    <Button
        android:id="@+id/oldproject2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/oldproject1"
        android:layout_below="@+id/oldproject1"
        android:layout_marginTop="34dp"
        android:text="Old Project 2" />

    <Button
        android:id="@+id/oldproject3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/oldproject2"
        android:layout_below="@+id/oldproject2"
        android:layout_marginTop="35dp"
        android:text="Old Project 3" />

</RelativeLayout>